        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
            <ColumnDefinition Width="749*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Wybierz kolor"
               Grid.Column="1"
               HorizontalAlignment="Left"
               Margin="240,10,0,0"
               VerticalAlignment="Top"
               FontSize="20"/>
        <TextBox x:Name="textBoxGValue" 
                 Grid.Column="1"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="337,116,9,9"
                 Text="0"
                 TextWrapping="Wrap"
                 Width="63"
                 FontSize="20"/>
        <TextBox x:Name="textBoxBValue" 
                 Grid.Column="1"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="337,146,9,9"
                 Text="0"
                 TextWrapping="Wrap"
                 Width="63"
                 FontSize="20"/>
        <TextBox x:Name="textBoxRValue" 
                 Grid.Column="1"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="337,176,9,9"
                 Text="0"
                 TextWrapping="Wrap"
                 Width="63"
                 FontSize="20"/>
    </Grid>
</Window>
